<h1>Shorten URL's <small style="float:right;"><%= link_to "Add New Shorten URL", new_link_path %></small></h1>


<table class="table table-striped table-hover">
  <tr>
    <th>Shorten</th>
    <th>Target URL</th>
    <th>Created At</th>
     <th>Visitor</th>
    <th>Actions</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link_to "#{ENV['BASE_URL']}#{link.shorten}", "#{ENV['BASE_URL']}#{link.shorten}", :target => '_blank',:class => "block-link" %></td>
      <td><%= link_to link.target_url, link_path(link.id), :class => "block-link" %></td>
      <td><%= link_to link.created_at, link_path(link.id), :class => "block-link" %></td>
      <td><%= link_to link.visit_count, link_path(link.id), :class => "block-link" %></td>
      <td><%= link_to "Edit", edit_link_path(link.id) %> <%= link_to "Delete", link_path(link.id), :method => "delete", :data => {:confirm => "Are you sure you would like to delete the link: #{link.shorten}?"} %></td>
    </tr>
  <% end %>
</table>