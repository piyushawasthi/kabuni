<h1>URL Stats for <%= ENV['BASE_URL']%><%= @link.shorten%></h1>
<h3>Visits Count: <%= @link.visit_count %></h3>

<table class="table table-striped table-hover">
  <tr>
    <th>IP</th>
    <th>City</th>
    <th>State</th>
     <th>Country</th>
  </tr>
  <% @link.visits.each do |visitor| %>
    <tr>
      <td><%= visitor.ip_address %></td>
      <td><%= visitor.city %></td>
      <td><%= visitor.state %></td>
      <td><%= visitor.country %></td>
    </tr>
  <% end %>
</table>